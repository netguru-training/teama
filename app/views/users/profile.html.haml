.page-header
  %h1 Welcome
.container
  .row
    .col-sm-12.col-md-6
      .h3 Your collection
      %table.table.table-responsive.table-hover
        %tr
          %th Name
          %th Action
        - current_user.collections.each do |c|
          %tr
            %td
              =link_to c.board_game.name, board_game_path(c.board_game)
            %td
              =link_to 'Remove', board_game_collection_path(c.board_game, c), method: :delete, class: 'btn btn-default btn-xs'

    .col-sm-12.col-md-6
      .h3 Last reviews
      %ul.list-group
        - last_reviews.last(5).each do |r|
          %li.list-group-item
            %h4
              =link_to r.board_game.name, board_game_path(r.board_game.id)
            %span.badge= r.rating
            %p= r.content
            %p.small
              by:
              = r.user.email
