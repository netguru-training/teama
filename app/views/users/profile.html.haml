.page-header
  %h1 Welcome
.container
  .row
    .col-sm-12.col-md-6
      .h3 Your collection
      %ul
        - current_user.collections.each do |c|
          %li= c.board_game.name
          \&nbsp;
          = link_to 'Delete', board_game_collection_path(c.board_game ,c), method: :delete, class: 'btn btn-default'

    .col-sm-12.col-md-6
      .h3 Last reviews
      %ul
        - last_reviews.last(5).each do |r|
          %li= r.content
