.container
  .row
    .page-header
      %h1 Board Games
    .col-md-6
      %h3 Best rated games
      %ul.list-group
        - best_games.each do |g|
          %li
            %h4
              =link_to g.name, board_game_path(g)
    .col-md-5
      %h3 Amounts:
      %ul.list-group
        %li
          %h4
            %span BoardGames:
            %span= board_games.count
        %li
          %h4
            %span Users:
            %span= User.all.count
  .row
    .col-sm-12.col-md-6
      %h3 Latest reviews
      %ul.list-group
        - latest_reviews.each do |r|
          %li.list-group-item
            %h4
              =link_to r.board_game.name, board_game_path(r.board_game.id)
            %span.badge= r.rating
            %p= r.content
            %p.small
              by:
              =link_to r.user.email, profile_path
